<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_enter_stats"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.anilkaynar.mybasketballstats.enterStats">

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:id="@+id/textView" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="incrementp3atmp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="21dp"
        android:id="@+id/button" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="decrementp3atmp"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentEnd="true"
        android:id="@+id/button2" />

    <TextView
        android:text="3 Point Attempt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_alignEnd="@+id/textView"
        android:id="@+id/textView3atp"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="3 point made"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="decrementp3made"

        android:layout_marginEnd="12dp"
        android:id="@+id/button4"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="incrementp3made"
        android:id="@+id/button3"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignStart="@+id/textView3atp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/button4"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:text="2 Point Attempt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        android:id="@+id/textView4" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignEnd="@+id/button3"
        android:onClick="incrementpoint2attempt"
        android:layout_marginTop="23dp"
        android:id="@+id/button5" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button5"
        android:layout_toStartOf="@+id/textView3"
        android:id="@+id/textView5" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button5"
        android:onClick="decrementpoint2attempt"
        android:layout_alignStart="@+id/button2"
        android:id="@+id/button6" />

    <TextView
        android:text="2 Point Made"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/textView6" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="incrementpoint2made"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/button5"
        android:layout_marginTop="19dp"
        android:id="@+id/button7" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button7"
        android:layout_toStartOf="@+id/textView5"
        android:layout_marginBottom="14dp"
        android:id="@+id/textView7" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button7"
        android:onClick="decrementpoint2made"
        android:layout_alignStart="@+id/button6"
        android:id="@+id/button8" />

    <Button
        android:text="Submit"
        android:textSize="20sp"
        android:shadowColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:onClick="submitandsql"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView5"
        android:id="@+id/button9" />
</RelativeLayout>
